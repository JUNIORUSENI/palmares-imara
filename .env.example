# ===========================================
# PALMARÈS IMARA - Configuration d'environnement
# ===========================================

# ===========================================
# CONFIGURATION DJANGO DE BASE
# ===========================================

# Mode debug (True pour développement, False pour production)
DEBUG=False

# Clé secrète Django (GÉNÉRER UNE NOUVELLE POUR LA PRODUCTION)
SECRET_KEY=votre-cle-secrete-très-longue-et-complexe-ici-changez-moi

# Hôtes autorisés (séparés par des virgules)
ALLOWED_HOSTS=localhost,127.0.0.1,palmares.aedbimarasfs.org,www.palmares.aedbimarasfs.org

# ===========================================
# CONFIGURATION DE LA BASE DE DONNÉES
# ===========================================

# Pour développement (SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# Pour production (PostgreSQL)
DB_ENGINE=postgresql
DB_NAME=palmares_imara_db
DB_USER=palmares_user
DB_PASSWORD=votre-mot-de-passe-complexe
DB_HOST=localhost
DB_PORT=5432
DB_SSLMODE=prefer

# ===========================================
# CONFIGURATION DES FICHIERS STATIQUES
# ===========================================

# URL pour les fichiers statiques
STATIC_URL=/static/
STATIC_ROOT=staticfiles

# URL pour les fichiers médias (uploads)
MEDIA_URL=/media/
MEDIA_ROOT=media

# ===========================================
# CONFIGURATION D'AUTHENTIFICATION
# ===========================================

# URLs d'authentification
LOGIN_URL=/login/
LOGOUT_REDIRECT_URL=/login/

# ===========================================
# CONFIGURATION EMAIL (OPTIONNEL)
# ===========================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ===========================================
# INSTRUCTIONS DE CONFIGURATION
# ===========================================

# 1. COPIER ce fichier vers .env
#    cp .env.example .env
#
# 2. MODIFIER les valeurs selon votre environnement
#
# 3. POUR LA PRODUCTION :
#    - Générer une nouvelle SECRET_KEY
#    - Définir DEBUG=False
#    - Configurer ALLOWED_HOSTS avec votre domaine
#    - Configurer la base de données PostgreSQL
#
# 4. SÉCURITÉ :
#    - Ne jamais commiter le fichier .env
#    - Utiliser des mots de passe complexes
#    - Générer des clés secrètes aléatoirement